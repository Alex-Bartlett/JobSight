@if (Task is not null)
{
    @* Look into retrieving the user from the task by user id. Then show the user relevant to the task here. *@
    <div class="border rounded my-3 p-3">
        <div class="d-flex justify-content-between">
            <div class="">
                <h5 class="">@Task.Description</h5>
            </div>
            <div class="lh-1 text-secondary">
                <span>@Task.UpdatedOn.ToShortDateString()</span>
            </div>
        </div>
    </div>
}
@code {
    [Parameter]
    public JobTask? Task { get; set; }
}
